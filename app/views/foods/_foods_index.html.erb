<h1>Foods</h1>

<table>
<thead>
  <tr>
    <th>食品名</th>
    <th>賞味期限 or 消費期限</th>
    <th>食品群類</th>
    <th>保管場所</th>
    <th>食材画像</th>
    <th colspan="3"></th>
  </tr>
</thead>

<tbody>
  <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.date %></td>
      <td><%= food.food %></td>
      <td><%= food.place %></td>
      <td><%= food.picture %></td>
      <td><%= link_to 'Show', food %></td>
      <td><%= link_to 'Edit', edit_food_path(food) %></td>
      <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>

<%= paginate @foods %>

<br>

