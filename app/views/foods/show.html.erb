<% if user_signed_in? %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @food.name %>
</p>

<p>
  <strong>Date:</strong>
  <%= @food.date %>
</p>

<p>
  <strong>Type:</strong>
  <%= @food.food %>
</p>

<p>
  <strong>Place:</strong>
  <%= @food.place %>
</p>

<p>
  <strong>Picture:</strong>
  <%= image_tag(@food.picture_url) if @food.picture.present?, :size =>'320x480' %>
</p>

<%= link_to 'Edit', edit_food_path(@food) %> |
<%= link_to 'Back', foods_path %>
<% else %>
  <p><%= link_to "Mastodonアカウントでログイン", user_mastodon_omniauth_authorize_path %></p>
<% end %>